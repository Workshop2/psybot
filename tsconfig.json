{
  "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "sourceMap": true,
      "target": "es5",
      "removeComments": false,
      "allowSyntheticDefaultImports": true,
      "suppressExcessPropertyErrors": true,
      "typeRoots": [
          "node_modules/@types"
      ]
  },
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}